<% content_for(:title) { "Baselines" } %>

<div class="space-y-8">
  <div>
    <h1 class="section-header">Baselines</h1>
    <p class="section-subheader">Approved baseline screenshots for visual comparisons</p>
  </div>

  <% if @baselines.respond_to?(:any?) && @baselines.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @baselines.each do |baseline| %>
        <%= link_to dashboard_project_baseline_path(@project, baseline), class: "block card card-interactive overflow-hidden" do %>
          <% if baseline.screenshot&.attached? %>
            <div class="aspect-video overflow-hidden bg-stone-50">
              <%= image_tag public_storage_url(baseline.screenshot), class: "w-full h-full object-cover object-top" %>
            </div>
          <% else %>
            <div class="aspect-video flex items-center justify-center bg-stone-50">
              <svg class="w-12 h-12 text-stone-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
          <% end %>
          <div class="p-4">
            <h3 class="text-sm font-medium text-stone-900"><%= baseline.page&.name || 'Unknown Page' %></h3>
            <div class="flex items-center gap-2 mt-2">
              <span class="badge badge-neutral">
                <%= baseline.browser_config&.browser || 'chromium' %>
              </span>
              <span class="text-xs text-stone-500">
                <%= baseline.browser_config&.viewport_width || 1280 %>x<%= baseline.browser_config&.viewport_height || 720 %>
              </span>
            </div>
            <p class="text-xs mt-2 text-stone-400"><%= time_ago_in_words(baseline.created_at) %> ago</p>
          </div>
        <% end %>
      <% end %>
    </div>

    <% if @baselines.respond_to?(:total_pages) && @baselines.total_pages > 1 %>
      <div class="mt-8 flex justify-center">
        <%# Add pagination if using kaminari/pagy %>
      </div>
    <% end %>
  <% else %>
    <div class="card">
      <div class="empty-state py-16">
        <div class="w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-5 bg-gradient-to-br from-amber-100 to-stone-200">
          <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
        <h3 class="empty-state-title">No baselines yet</h3>
        <p class="empty-state-description">Baselines are created when you approve comparisons.</p>
      </div>
    </div>
  <% end %>
</div>
