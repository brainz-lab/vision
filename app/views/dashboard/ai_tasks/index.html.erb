<% content_for(:title) { "AI Tasks" } %>

<div class="space-y-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="section-header">AI Tasks</h1>
      <p class="section-subheader">Autonomous browser automation tasks</p>
    </div>
  </div>

  <% if @tasks.any? %>
    <div class="card overflow-hidden">
      <table class="table">
        <thead>
          <tr>
            <th>Task</th>
            <th>Status</th>
            <th>Model</th>
            <th>Steps</th>
            <th>Tokens</th>
            <th>Duration</th>
            <th>Created</th>
          </tr>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>
            <tr class="hover:bg-stone-50 transition-colors">
              <td>
                <%= link_to dashboard_project_ai_task_path(@project, task), class: "block" do %>
                  <p class="font-medium truncate max-w-md text-stone-900"><%= task.instruction.truncate(60) %></p>
                  <% if task.start_url.present? %>
                    <p class="text-xs mt-0.5 truncate max-w-md text-stone-500"><%= task.start_url.truncate(50) %></p>
                  <% end %>
                <% end %>
              </td>
              <td>
                <% case task.status %>
                <% when 'pending' %>
                  <span class="badge badge-neutral">Pending</span>
                <% when 'running' %>
                  <span class="badge badge-info">Running</span>
                <% when 'completed' %>
                  <span class="badge badge-success">Completed</span>
                <% when 'stopped' %>
                  <span class="badge badge-warning">Stopped</span>
                <% when 'timeout', 'error' %>
                  <span class="badge badge-error"><%= task.status.capitalize %></span>
                <% end %>
              </td>
              <td class="text-stone-600">
                <%= task.model %>
              </td>
              <td class="text-stone-600">
                <%= task.steps_executed %>/<%= task.max_steps %>
              </td>
              <td class="text-stone-600">
                <% if task.total_tokens > 0 %>
                  <%= number_with_delimiter(task.total_tokens) %>
                  <span class="text-xs text-stone-500">
                    (<%= number_with_delimiter(task.total_input_tokens || 0) %>/<%= number_with_delimiter(task.total_output_tokens || 0) %>)
                  </span>
                <% else %>
                  -
                <% end %>
              </td>
              <td class="text-stone-600">
                <% if task.duration_ms %>
                  <%= (task.duration_ms / 1000.0).round(1) %>s
                <% else %>
                  -
                <% end %>
              </td>
              <td class="text-stone-600">
                <%= time_ago_in_words(task.created_at) %> ago
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="card">
      <div class="empty-state py-16">
        <div class="w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-5 bg-gradient-to-br from-amber-100 to-stone-200">
          <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
        </div>
        <h3 class="empty-state-title">No AI tasks yet</h3>
        <p class="empty-state-description">Tasks are created via MCP tools or the API</p>
      </div>
    </div>
  <% end %>
</div>
