<% content_for(:title) { "Test Runs" } %>

<div class="space-y-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="section-header">Test Runs</h1>
      <p class="section-subheader">Visual regression test history</p>
    </div>
  </div>

  <% if @test_runs.any? %>
    <div class="card overflow-hidden">
      <table class="table">
        <thead>
          <tr>
            <th>Run</th>
            <th>Status</th>
            <th>Comparisons</th>
            <th>Passed</th>
            <th>Failed</th>
            <th>Created</th>
          </tr>
        </thead>
        <tbody>
          <% @test_runs.each do |run| %>
            <tr>
              <td>
                <%= link_to dashboard_project_test_run_path(@project, run), class: "font-medium text-stone-900 hover:text-amber-600" do %>
                  #<%= run.id.to_s[0..7] %>
                <% end %>
                <% if run.name.present? %>
                  <span class="text-sm ml-2 text-stone-500"><%= run.name %></span>
                <% end %>
              </td>
              <td>
                <% case run.status %>
                <% when 'pending' %>
                  <span class="badge badge-neutral">Pending</span>
                <% when 'running' %>
                  <span class="badge badge-info">Running</span>
                <% when 'completed' %>
                  <span class="badge badge-success">Completed</span>
                <% when 'failed' %>
                  <span class="badge badge-error">Failed</span>
                <% end %>
              </td>
              <td class="text-stone-600">
                <%= run.comparisons.count %>
              </td>
              <td class="text-green-600">
                <%= run.comparisons.where(status: 'passed').count %>
              </td>
              <td class="text-red-600">
                <%= run.comparisons.where(status: 'failed').count %>
              </td>
              <td class="text-stone-600">
                <%= time_ago_in_words(run.created_at) %> ago
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="card">
      <div class="empty-state py-16">
        <div class="w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-5 bg-gradient-to-br from-amber-100 to-stone-200">
          <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
          </svg>
        </div>
        <h3 class="empty-state-title">No test runs yet</h3>
        <p class="empty-state-description">Test runs are triggered via the API or MCP tools</p>
      </div>
    </div>
  <% end %>
</div>
