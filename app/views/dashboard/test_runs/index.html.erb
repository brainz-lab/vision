<% content_for(:title) { "Test Runs" } %>

<div class="space-y-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-[22px] font-semibold tracking-tight" style="color: #1A1A1A;">Test Runs</h1>
      <p class="mt-1 text-[13px]" style="color: #8B8780;">Visual regression test history</p>
    </div>
  </div>

  <% if @test_runs.any? %>
    <div class="rounded-xl overflow-hidden" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
      <table class="min-w-full">
        <thead>
          <tr style="border-bottom: 1px solid #E8E5E0;">
            <th class="px-5 py-3 text-left text-[11px] font-medium uppercase tracking-wider" style="color: #8B8780;">Run</th>
            <th class="px-5 py-3 text-left text-[11px] font-medium uppercase tracking-wider" style="color: #8B8780;">Status</th>
            <th class="px-5 py-3 text-left text-[11px] font-medium uppercase tracking-wider" style="color: #8B8780;">Comparisons</th>
            <th class="px-5 py-3 text-left text-[11px] font-medium uppercase tracking-wider" style="color: #8B8780;">Passed</th>
            <th class="px-5 py-3 text-left text-[11px] font-medium uppercase tracking-wider" style="color: #8B8780;">Failed</th>
            <th class="px-5 py-3 text-left text-[11px] font-medium uppercase tracking-wider" style="color: #8B8780;">Created</th>
          </tr>
        </thead>
        <tbody>
          <% @test_runs.each_with_index do |run, index| %>
            <tr style="<%= index < @test_runs.size - 1 ? 'border-bottom: 1px solid #E8E5E0;' : '' %>">
              <td class="px-5 py-4">
                <%= link_to dashboard_project_test_run_path(@project, run), class: "text-[14px] font-medium hover:underline", style: "color: #1A1A1A;" do %>
                  #<%= run.id.to_s[0..7] %>
                <% end %>
                <% if run.name.present? %>
                  <span class="text-[13px] ml-2" style="color: #8B8780;"><%= run.name %></span>
                <% end %>
              </td>
              <td class="px-5 py-4">
                <% case run.status %>
                <% when 'pending' %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[11px] font-medium" style="background: #F0EFED; color: #6B6760;">Pending</span>
                <% when 'running' %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[11px] font-medium" style="background: #DBEAFE; color: #1E40AF;">Running</span>
                <% when 'completed' %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[11px] font-medium" style="background: #D1FAE5; color: #065F46;">Completed</span>
                <% when 'failed' %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[11px] font-medium" style="background: #FEE2E2; color: #991B1B;">Failed</span>
                <% end %>
              </td>
              <td class="px-5 py-4 text-[13px]" style="color: #6B6760;">
                <%= run.comparisons.count %>
              </td>
              <td class="px-5 py-4 text-[13px]" style="color: #059669;">
                <%= run.comparisons.where(status: 'passed').count %>
              </td>
              <td class="px-5 py-4 text-[13px]" style="color: #DC2626;">
                <%= run.comparisons.where(status: 'failed').count %>
              </td>
              <td class="px-5 py-4 text-[13px]" style="color: #6B6760;">
                <%= time_ago_in_words(run.created_at) %> ago
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-center py-16 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
      <div class="space-y-3">
        <svg class="mx-auto w-12 h-12" style="color: #C4C1BC;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
        </svg>
        <p class="text-[15px]" style="color: #6B6760;">No test runs yet</p>
        <p class="text-[13px]" style="color: #8B8780;">Test runs are triggered via the API or MCP tools</p>
      </div>
    </div>
  <% end %>
</div>
