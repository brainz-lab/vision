<% content_for(:title) { "New Project" } %>

<div class="max-w-lg">
  <div class="mb-8">
    <%= link_to dashboard_root_path, class: "inline-flex items-center text-[13px] font-medium", style: "color: #8B8780;" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Projects
    <% end %>
  </div>

  <h1 class="text-[22px] font-semibold tracking-tight mb-8" style="color: #1A1A1A;">Create New Project</h1>

  <%= form_with model: @project, url: dashboard_projects_path, class: "space-y-6" do |f| %>
    <% if @project.errors.any? %>
      <div class="px-4 py-3 rounded-lg text-[14px]" style="background: #FEE8E8; color: #8B2D2D;">
        <ul class="list-disc list-inside">
          <% @project.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :name, class: "block text-[13px] font-medium mb-2", style: "color: #1A1A1A;" %>
      <%= f.text_field :name, class: "w-full px-4 py-2.5 text-[14px] rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;", placeholder: "My Project" %>
    </div>

    <div>
      <%= f.label :base_url, "Base URL", class: "block text-[13px] font-medium mb-2", style: "color: #1A1A1A;" %>
      <%= f.url_field :base_url, class: "w-full px-4 py-2.5 text-[14px] rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;", placeholder: "https://myapp.com" %>
      <p class="mt-2 text-[12px]" style="color: #8B8780;">The production URL of your application</p>
    </div>

    <div>
      <%= f.label :staging_url, "Staging URL (optional)", class: "block text-[13px] font-medium mb-2", style: "color: #1A1A1A;" %>
      <%= f.url_field :staging_url, class: "w-full px-4 py-2.5 text-[14px] rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;", placeholder: "https://staging.myapp.com" %>
      <p class="mt-2 text-[12px]" style="color: #8B8780;">Used for comparing staging vs production</p>
    </div>

    <div class="pt-4">
      <%= f.submit "Create Project", class: "w-full px-4 py-2.5 text-[14px] font-medium rounded-lg transition-colors cursor-pointer", style: "background: #1A1A1A; color: #FFFFFE;" %>
    </div>
  <% end %>
</div>
