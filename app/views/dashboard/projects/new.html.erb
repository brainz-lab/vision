<% content_for(:title) { "New Project" } %>

<div class="max-w-lg">
  <div class="mb-8">
    <%= link_to dashboard_root_path, class: "btn-ghost text-sm" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Projects
    <% end %>
  </div>

  <h1 class="section-header mb-8">Create New Project</h1>

  <%= form_with model: @project, url: dashboard_projects_path, class: "space-y-6" do |f| %>
    <% if @project.errors.any? %>
      <div class="alert alert-error">
        <svg class="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
        </svg>
        <ul class="list-disc list-inside">
          <% @project.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, class: "input", placeholder: "My Project" %>
    </div>

    <div>
      <%= f.label :base_url, "Base URL", class: "label" %>
      <%= f.url_field :base_url, class: "input", placeholder: "https://myapp.com" %>
      <p class="mt-2 text-xs text-stone-500">The production URL of your application</p>
    </div>

    <div>
      <%= f.label :staging_url, "Staging URL (optional)", class: "label" %>
      <%= f.url_field :staging_url, class: "input", placeholder: "https://staging.myapp.com" %>
      <p class="mt-2 text-xs text-stone-500">Used for comparing staging vs production</p>
    </div>

    <div class="pt-4">
      <%= f.submit "Create Project", class: "btn-primary w-full" %>
    </div>
  <% end %>
</div>
