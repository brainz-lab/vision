<% content_for(:title) { "Settings" } %>

<div class="space-y-8 max-w-2xl">
  <div>
    <h1 class="section-header">Project Settings</h1>
    <p class="section-subheader"><%= @project.name %></p>
  </div>

  <!-- Project Details -->
  <div class="card card-body">
    <h2 class="text-[15px] font-semibold mb-4 text-stone-900">Project Details</h2>
    <dl class="space-y-4">
      <div>
        <dt class="text-xs font-medium uppercase tracking-wider text-stone-500">Name</dt>
        <dd class="mt-1 text-sm text-stone-900"><%= @project.name %></dd>
      </div>
      <div>
        <dt class="text-xs font-medium uppercase tracking-wider text-stone-500">Base URL</dt>
        <dd class="mt-1 text-sm text-stone-900"><%= @project.base_url %></dd>
      </div>
      <% if @project.staging_url.present? %>
        <div>
          <dt class="text-xs font-medium uppercase tracking-wider text-stone-500">Staging URL</dt>
          <dd class="mt-1 text-sm text-stone-900"><%= @project.staging_url %></dd>
        </div>
      <% end %>
      <div>
        <dt class="text-xs font-medium uppercase tracking-wider text-stone-500">Platform Project ID</dt>
        <dd class="mt-1 font-mono text-sm text-stone-600"><%= @project.platform_project_id %></dd>
      </div>
      <div>
        <dt class="text-xs font-medium uppercase tracking-wider text-stone-500">Created</dt>
        <dd class="mt-1 text-sm text-stone-900"><%= @project.created_at.strftime('%B %d, %Y at %I:%M %p') %></dd>
      </div>
    </dl>
  </div>

  <!-- API Access -->
  <div class="card card-body">
    <h2 class="text-[15px] font-semibold mb-4 text-stone-900">API Access</h2>
    <p class="text-sm mb-4 text-stone-500">Use the Platform API key to authenticate requests to Vision.</p>
    <div class="rounded-lg p-4 bg-stone-50">
      <code class="text-sm font-mono text-stone-600">
        Authorization: Bearer YOUR_PLATFORM_API_KEY
      </code>
    </div>
  </div>

  <!-- Statistics -->
  <div class="card card-body">
    <h2 class="text-[15px] font-semibold mb-4 text-stone-900">Statistics</h2>
    <div class="grid grid-cols-3 gap-4">
      <div class="text-center p-4 rounded-lg bg-stone-50">
        <div class="text-2xl font-semibold text-stone-900"><%= @project.pages.count %></div>
        <div class="text-xs font-medium uppercase tracking-wider text-stone-500">Pages</div>
      </div>
      <div class="text-center p-4 rounded-lg bg-stone-50">
        <div class="text-2xl font-semibold text-stone-900"><%= @project.test_runs.count %></div>
        <div class="text-xs font-medium uppercase tracking-wider text-stone-500">Test Runs</div>
      </div>
      <div class="text-center p-4 rounded-lg bg-stone-50">
        <div class="text-2xl font-semibold text-stone-900"><%= Baseline.joins(:page).where(pages: { project_id: @project.id }).count %></div>
        <div class="text-xs font-medium uppercase tracking-wider text-stone-500">Baselines</div>
      </div>
    </div>
  </div>
</div>
