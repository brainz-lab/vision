<% content_for(:title) { "Pages" } %>

<div class="space-y-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="section-header">Pages</h1>
      <p class="section-subheader"><%= @project.base_url %></p>
    </div>
    <%= link_to new_dashboard_project_page_path(@project), class: "btn-primary" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      New Page
    <% end %>
  </div>

  <% if @pages.any? %>
    <div class="card overflow-hidden">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Path</th>
            <th>Baselines</th>
            <th>Last Snapshot</th>
            <th class="text-right"></th>
          </tr>
        </thead>
        <tbody>
          <% @pages.each do |page| %>
            <tr>
              <td>
                <%= link_to page.name, dashboard_project_page_path(@project, page), class: "font-medium text-stone-900 hover:text-amber-600" %>
              </td>
              <td class="text-stone-600">
                <%= page.path %>
              </td>
              <td class="text-stone-600">
                <%= page.baselines.count %>
              </td>
              <td class="text-stone-600">
                <% if page.snapshots.any? %>
                  <%= time_ago_in_words(page.snapshots.recent.first.created_at) %> ago
                <% else %>
                  <span class="text-stone-400">Never</span>
                <% end %>
              </td>
              <td class="text-right">
                <%= link_to "Edit", edit_dashboard_project_page_path(@project, page), class: "btn-ghost btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="card">
      <div class="empty-state py-16">
        <div class="w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-5 bg-gradient-to-br from-amber-100 to-stone-200">
          <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"/>
          </svg>
        </div>
        <h3 class="empty-state-title">No pages configured</h3>
        <p class="empty-state-description">Add a page to start capturing screenshots</p>
        <div class="mt-8">
          <%= link_to new_dashboard_project_page_path(@project), class: "btn-primary" do %>
            Add your first page
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
