<% content_for(:title) { "New Page" } %>

<div class="max-w-lg">
  <div class="mb-8">
    <%= link_to dashboard_project_pages_path(@project), class: "inline-flex items-center text-[13px] font-medium", style: "color: #8B8780;" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Pages
    <% end %>
  </div>

  <h1 class="text-[22px] font-semibold tracking-tight mb-8" style="color: #1A1A1A;">New Page</h1>

  <%= form_with model: @page, url: dashboard_project_pages_path(@project), method: :post, class: "space-y-6" do |f| %>
    <% if @page.errors.any? %>
      <div class="px-4 py-3 rounded-lg text-[14px]" style="background: #FEE8E8; color: #8B2D2D;">
        <ul class="list-disc list-inside">
          <% @page.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :name, class: "block text-[13px] font-medium mb-2", style: "color: #1A1A1A;" %>
      <%= f.text_field :name, class: "w-full px-4 py-2.5 text-[14px] rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;", placeholder: "Homepage" %>
    </div>

    <div>
      <%= f.label :path, class: "block text-[13px] font-medium mb-2", style: "color: #1A1A1A;" %>
      <%= f.text_field :path, class: "w-full px-4 py-2.5 text-[14px] rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;", placeholder: "/" %>
      <p class="mt-2 text-[12px]" style="color: #8B8780;">Relative path from base URL (<%= @project.base_url %>)</p>
    </div>

    <div>
      <%= f.label :wait_for, "Wait For Selector", class: "block text-[13px] font-medium mb-2", style: "color: #1A1A1A;" %>
      <%= f.text_field :wait_for, class: "w-full px-4 py-2.5 text-[14px] rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;", placeholder: "#main-content" %>
      <p class="mt-2 text-[12px]" style="color: #8B8780;">CSS selector to wait for before capturing</p>
    </div>

    <div>
      <%= f.label :wait_ms, "Wait Time (ms)", class: "block text-[13px] font-medium mb-2", style: "color: #1A1A1A;" %>
      <%= f.number_field :wait_ms, min: 0, max: 30000, step: 100, class: "w-32 px-4 py-2.5 text-[14px] rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;", placeholder: "1000" %>
      <p class="mt-2 text-[12px]" style="color: #8B8780;">Additional wait time after page load</p>
    </div>

    <div class="pt-4 flex gap-4">
      <%= f.submit "Create Page", class: "flex-1 px-4 py-2.5 text-[14px] font-medium rounded-lg transition-colors cursor-pointer", style: "background: #1A1A1A; color: #FFFFFE;" %>
      <%= link_to "Cancel", dashboard_project_pages_path(@project), class: "px-4 py-2.5 text-[14px] font-medium rounded-lg transition-colors text-center", style: "background: #F0EFED; color: #6B6760;" %>
    </div>
  <% end %>
</div>
