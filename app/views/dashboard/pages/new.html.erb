<% content_for(:title) { "New Page" } %>

<div class="max-w-lg">
  <div class="mb-8">
    <%= link_to dashboard_project_pages_path(@project), class: "btn-ghost text-sm" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Pages
    <% end %>
  </div>

  <h1 class="section-header mb-8">New Page</h1>

  <%= form_with model: @page, url: dashboard_project_pages_path(@project), method: :post, class: "space-y-6" do |f| %>
    <% if @page.errors.any? %>
      <div class="alert alert-error">
        <svg class="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
        </svg>
        <ul class="list-disc list-inside">
          <% @page.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, class: "input", placeholder: "Homepage" %>
    </div>

    <div>
      <%= f.label :path, class: "label" %>
      <%= f.text_field :path, class: "input", placeholder: "/" %>
      <p class="mt-2 text-xs text-stone-500">Relative path from base URL (<%= @project.base_url %>)</p>
    </div>

    <div>
      <%= f.label :wait_for, "Wait For Selector", class: "label" %>
      <%= f.text_field :wait_for, class: "input", placeholder: "#main-content" %>
      <p class="mt-2 text-xs text-stone-500">CSS selector to wait for before capturing</p>
    </div>

    <div>
      <%= f.label :wait_ms, "Wait Time (ms)", class: "label" %>
      <%= f.number_field :wait_ms, min: 0, max: 30000, step: 100, class: "input w-32", placeholder: "1000" %>
      <p class="mt-2 text-xs text-stone-500">Additional wait time after page load</p>
    </div>

    <div class="pt-4 flex gap-4">
      <%= f.submit "Create Page", class: "btn-primary flex-1" %>
      <%= link_to "Cancel", dashboard_project_pages_path(@project), class: "btn-secondary" %>
    </div>
  <% end %>
</div>
