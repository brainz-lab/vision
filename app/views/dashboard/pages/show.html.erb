<% content_for(:title) { @page.name } %>

<div class="space-y-8">
  <div class="flex items-center justify-between">
    <div>
      <div class="mb-2">
        <%= link_to dashboard_project_pages_path(@project), class: "btn-ghost text-sm" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          Back to Pages
        <% end %>
      </div>
      <h1 class="section-header"><%= @page.name %></h1>
      <p class="section-subheader"><%= @page.path || @page.full_url %></p>
    </div>
    <%= link_to "Edit", edit_dashboard_project_page_path(@project, @page), class: "btn-secondary" %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Baselines -->
    <div class="space-y-4">
      <h2 class="text-[15px] font-semibold text-stone-900">Current Baselines</h2>
      <% if @baselines.any? %>
        <div class="space-y-4">
          <% @baselines.each do |baseline| %>
            <div class="card card-body">
              <div class="flex justify-between items-start mb-3">
                <div class="flex items-center gap-2">
                  <span class="badge badge-neutral">
                    <%= baseline.browser_config&.browser || 'chromium' %>
                  </span>
                  <span class="text-xs text-stone-500">
                    <%= baseline.browser_config&.viewport_width || 1280 %>x<%= baseline.browser_config&.viewport_height || 720 %>
                  </span>
                </div>
                <span class="text-xs text-stone-400"><%= time_ago_in_words(baseline.created_at) %> ago</span>
              </div>
              <% if baseline.screenshot&.attached? %>
                <div class="rounded-lg overflow-hidden border border-stone-200">
                  <%= image_tag public_storage_url(baseline.screenshot), class: "w-full h-auto" %>
                </div>
              <% else %>
                <div class="rounded-lg p-8 text-center bg-stone-50">
                  <span class="text-sm text-stone-400">No image available</span>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="card">
          <div class="empty-state py-12">
            <svg class="empty-state-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <p class="empty-state-description">No baselines yet</p>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Recent Snapshots -->
    <div class="space-y-4">
      <h2 class="text-[15px] font-semibold text-stone-900">Recent Snapshots</h2>
      <% if @snapshots.any? %>
        <div class="space-y-4">
          <% @snapshots.each do |snapshot| %>
            <div class="card card-body">
              <div class="flex justify-between items-start mb-3">
                <div class="flex items-center gap-2">
                  <span class="badge badge-neutral">
                    <%= snapshot.browser_config&.browser || 'chromium' %>
                  </span>
                  <span class="text-xs text-stone-500">
                    <%= snapshot.browser_config&.viewport_width || 1280 %>x<%= snapshot.browser_config&.viewport_height || 720 %>
                  </span>
                </div>
                <span class="text-xs text-stone-400"><%= time_ago_in_words(snapshot.created_at) %> ago</span>
              </div>
              <% if snapshot.screenshot&.attached? %>
                <div class="rounded-lg overflow-hidden border border-stone-200">
                  <%= image_tag public_storage_url(snapshot.screenshot), class: "w-full h-auto" %>
                </div>
              <% else %>
                <div class="rounded-lg p-8 text-center bg-stone-50">
                  <% if snapshot.status == 'pending' %>
                    <span class="text-sm text-stone-500">Capturing...</span>
                  <% else %>
                    <span class="text-sm text-stone-400">No image available</span>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="card">
          <div class="empty-state py-12">
            <svg class="empty-state-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <p class="empty-state-description">No snapshots yet</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
