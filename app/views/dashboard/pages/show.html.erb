<% content_for(:title) { @page.name } %>

<div class="space-y-8">
  <div class="flex items-center justify-between">
    <div>
      <div class="mb-2">
        <%= link_to dashboard_project_pages_path(@project), class: "inline-flex items-center text-[13px] font-medium", style: "color: #8B8780;" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          Back to Pages
        <% end %>
      </div>
      <h1 class="text-[22px] font-semibold tracking-tight" style="color: #1A1A1A;"><%= @page.name %></h1>
      <p class="mt-1 text-[13px]" style="color: #8B8780;"><%= @page.path || @page.full_url %></p>
    </div>
    <%= link_to "Edit", edit_dashboard_project_page_path(@project, @page), class: "px-4 py-2 text-[13px] font-medium rounded-lg", style: "background: #F0EFED; color: #6B6760;" %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Baselines -->
    <div class="space-y-4">
      <h2 class="text-[15px] font-semibold" style="color: #1A1A1A;">Current Baselines</h2>
      <% if @baselines.any? %>
        <div class="space-y-4">
          <% @baselines.each do |baseline| %>
            <div class="rounded-xl p-4" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
              <div class="flex justify-between items-start mb-3">
                <div class="flex items-center gap-2">
                  <span class="px-2 py-0.5 rounded-full text-[11px] font-medium" style="background: #F0EFED; color: #6B6760;">
                    <%= baseline.browser_config&.browser || 'chromium' %>
                  </span>
                  <span class="text-[12px]" style="color: #8B8780;">
                    <%= baseline.browser_config&.viewport_width || 1280 %>x<%= baseline.browser_config&.viewport_height || 720 %>
                  </span>
                </div>
                <span class="text-[11px]" style="color: #C4C0B8;"><%= time_ago_in_words(baseline.created_at) %> ago</span>
              </div>
              <% if baseline.screenshot&.attached? %>
                <div class="rounded-lg overflow-hidden" style="border: 1px solid #E8E5E0;">
                  <%= image_tag url_for(baseline.screenshot), class: "w-full h-auto" %>
                </div>
              <% else %>
                <div class="rounded-lg p-8 text-center" style="background: #FAF9F7;">
                  <span class="text-[13px]" style="color: #C4C0B8;">No image available</span>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
          <svg class="mx-auto w-10 h-10 mb-3" style="color: #C4C1BC;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          <p class="text-[13px]" style="color: #8B8780;">No baselines yet</p>
        </div>
      <% end %>
    </div>

    <!-- Recent Snapshots -->
    <div class="space-y-4">
      <h2 class="text-[15px] font-semibold" style="color: #1A1A1A;">Recent Snapshots</h2>
      <% if @snapshots.any? %>
        <div class="space-y-4">
          <% @snapshots.each do |snapshot| %>
            <div class="rounded-xl p-4" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
              <div class="flex justify-between items-start mb-3">
                <div class="flex items-center gap-2">
                  <span class="px-2 py-0.5 rounded-full text-[11px] font-medium" style="background: #F0EFED; color: #6B6760;">
                    <%= snapshot.browser_config&.browser || 'chromium' %>
                  </span>
                  <span class="text-[12px]" style="color: #8B8780;">
                    <%= snapshot.browser_config&.viewport_width || 1280 %>x<%= snapshot.browser_config&.viewport_height || 720 %>
                  </span>
                </div>
                <span class="text-[11px]" style="color: #C4C0B8;"><%= time_ago_in_words(snapshot.created_at) %> ago</span>
              </div>
              <% if snapshot.screenshot&.attached? %>
                <div class="rounded-lg overflow-hidden" style="border: 1px solid #E8E5E0;">
                  <%= image_tag url_for(snapshot.screenshot), class: "w-full h-auto" %>
                </div>
              <% else %>
                <div class="rounded-lg p-8 text-center" style="background: #FAF9F7;">
                  <% if snapshot.status == 'pending' %>
                    <span class="text-[13px]" style="color: #8B8780;">Capturing...</span>
                  <% else %>
                    <span class="text-[13px]" style="color: #C4C0B8;">No image available</span>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
          <svg class="mx-auto w-10 h-10 mb-3" style="color: #C4C1BC;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          <p class="text-[13px]" style="color: #8B8780;">No snapshots yet</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
