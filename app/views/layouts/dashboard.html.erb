<!DOCTYPE html>
<html lang="en" class="h-full" data-controller="dark-mode">
<head>
  <title>Vision - <%= content_for(:title) || "Visual Regression Testing" %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="color-scheme" content="light dark">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%# Fonts %>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&family=Source+Serif+4:opsz,wght@8..60,400;8..60,500;8..60,600;8..60,700&display=swap" rel="stylesheet">

  <%# BrainzLab UI Design System %>
  <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "dark_mode", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>

  <%# Prevent flash of wrong theme on page load and provide toggle function %>
  <script>
    (function() {
      const savedTheme = localStorage.getItem('brainzlab-theme');
      const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      if (savedTheme === 'dark' || (!savedTheme && systemPrefersDark)) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.add('light');
      }

      // Vanilla JS dark mode toggle - works without Stimulus
      window.toggleDarkMode = function() {
        const html = document.documentElement;
        const isDark = html.classList.contains('dark');
        if (isDark) {
          html.classList.remove('dark');
          html.classList.add('light');
          localStorage.setItem('brainzlab-theme', 'light');
        } else {
          html.classList.remove('light');
          html.classList.add('dark');
          localStorage.setItem('brainzlab-theme', 'dark');
        }
        // Update icon if exists
        const icon = document.querySelector('[data-dark-mode-target="icon"]');
        if (icon) {
          icon.innerHTML = isDark
            ? '<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" /></svg>'
            : '<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" /></svg>';
        }
      };
    })();
  </script>

  <style>
    :root {
      /* Vision-specific brand colors */
      --color-vision: #D97706;
      --color-vision-dark: #B45309;
      --color-vision-light: #FBBF24;
    }
  </style>

  <%# Google Analytics - only in production %>
  <% if Rails.env.production? %>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-CXHFR6PC8W"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-CXHFR6PC8W');
    </script>
  <% end %>
</head>
<body class="h-full antialiased bg-dm">
  <div class="flex h-full">
    <!-- Sidebar -->
    <aside class="w-64 flex flex-col bg-dm-surface border-r border-dm">
      <div class="p-5 border-b border-dm flex items-center justify-between">
        <%= link_to dashboard_root_path, class: "flex items-center gap-2.5" do %>
          <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background: var(--dm-vision);">
            <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="currentColor">
              <circle cx="12" cy="12" r="8"/>
              <circle cx="12" cy="12" r="4" fill="white" fill-opacity="0.3"/>
              <circle cx="12" cy="12" r="1.5"/>
            </svg>
          </div>
          <span class="font-semibold text-dm">Vision</span>
        <% end %>

        <%# Dark Mode Toggle %>
        <button type="button"
                class="dark-mode-toggle"
                onclick="toggleDarkMode()"
                data-dark-mode-target="icon"
                title="Toggle dark mode">
          <%# Moon icon - visible in light mode %>
          <svg class="icon-moon" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z"/>
          </svg>
          <%# Sun icon - visible in dark mode %>
          <svg class="icon-sun" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z"/>
          </svg>
        </button>
      </div>

      <% if defined?(@project) && @project&.persisted? %>
        <!-- Project Selector -->
        <div class="px-4 py-3 border-b border-dm">
          <%= link_to dashboard_projects_path, class: "flex items-center gap-2 px-2 py-1.5 rounded-lg transition text-dm-muted hover:text-dm hover:bg-dm-hover" do %>
            <div class="w-6 h-6 rounded flex items-center justify-center text-xs font-semibold" style="background: rgba(217, 119, 6, 0.15); color: var(--dm-vision);">
              <%= @project.name.first.upcase %>
            </div>
            <span class="flex-1 text-sm font-medium truncate"><%= @project.name %></span>
            <svg class="w-4 h-4 text-dm-subtle" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 9l4-4 4 4m0 6l-4 4-4-4"/>
            </svg>
          <% end %>
        </div>

        <!-- Navigation -->
        <nav class="p-4 space-y-1 flex-1">
          <%= link_to dashboard_project_pages_path(@project), class: nav_link_class('/pages') do %>
            <%= icon(:pages) %>
            Pages
          <% end %>

          <%= link_to dashboard_project_test_runs_path(@project), class: nav_link_class('/test_runs') do %>
            <%= icon(:test_runs) %>
            Test Runs
          <% end %>

          <%= link_to dashboard_project_baselines_path(@project), class: nav_link_class('/baselines') do %>
            <%= icon(:baselines) %>
            Baselines
          <% end %>

          <%= link_to dashboard_project_ai_tasks_path(@project), class: nav_link_class('/ai_tasks') do %>
            <%= icon(:ai_tasks) %>
            AI Tasks
          <% end %>

          <%= link_to mcp_setup_dashboard_project_path(@project), class: nav_link_class('/mcp_setup') do %>
            <%= icon(:mcp) %>
            MCP Setup
          <% end %>

          <%= link_to settings_dashboard_project_path(@project), class: nav_link_class('/settings') do %>
            <%= icon(:settings) %>
            Settings
          <% end %>
        </nav>
      <% else %>
        <nav class="p-4 flex-1">
          <p class="px-3 text-xs font-medium uppercase tracking-wider mb-3 text-dm-subtle">Select a project</p>
        </nav>
      <% end %>

      <!-- User Menu -->
      <% if defined?(current_user) && current_user %>
        <div class="p-4 border-t border-dm">
          <div class="flex items-center gap-3">
            <div class="avatar avatar-md avatar-primary">
              <%= current_user.name&.first&.upcase || current_user.email.first.upcase %>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium truncate text-dm"><%= current_user.name || current_user.email.split('@').first %></p>
              <p class="text-xs truncate text-dm-muted"><%= current_user.email %></p>
            </div>
          </div>
        </div>
      <% end %>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 overflow-auto bg-dm">
      <% if notice.present? %>
        <div class="m-8 mb-0 alert alert-success">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span><%= notice %></span>
        </div>
      <% end %>
      <% if alert.present? %>
        <div class="m-8 mb-0 alert alert-error">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
          </svg>
          <span><%= alert %></span>
        </div>
      <% end %>

      <div class="p-8">
        <%= yield %>
      </div>
    </main>
  </div>
</body>
</html>
